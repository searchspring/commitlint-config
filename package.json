{
  "name": "@searchspring/commitlint-config",
  "description": "For clean commits!",
  "version": "0.0.1",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/searchspring/commitlint-config/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@commitlint/config-conventional": "^11.0.0"
  },
  "devDependencies": {
    "commitizen": "^4.2.1",
    "commitlint": "^11.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "fixpack": "^3.0.6",
    "husky": "^4.3.0"
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/searchspring/commitlint-config#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "commit",
    "commitlint",
    "lint"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/searchspring/commitlint-config.git"
  },
  "scripts": {
    "commit": "cz",
    "major": "npm version major && npm publish",
    "minor": "npm version minor && npm publish",
    "patch": "npm version patch && npm publish",
    "postpublish": "git push",
    "prepare": "fixpack",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
